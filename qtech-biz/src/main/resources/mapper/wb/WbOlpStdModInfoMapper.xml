<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qtech.wb.mapper.WbOlpStdModInfoMapper">

    <resultMap type="WbOlpStdModInfo" id="WbOlpStdModInfoResult">
        <result property="sid"    column="sid"    />
        <result property="mcId"    column="mc_id"    />
        <result property="lineCount"    column="line_count"    />
        <result property="status"    column="status"    />
        <result property="provider"    column="provider"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <resultMap id="WbOlpTrendingVoResult" type="WbOlpTrendingVo">
        <result property="date" column="dt"/>
        <result property="code" column="code"/>
        <result property="cnt"  column="cnt"/>
    </resultMap>

    <sql id="selectWbOlpStdModInfoVo">
        select sid, mc_id, line_count, status, provider, factory, create_by, create_time, update_by, update_time, remark from IMBIZ.WB_OLP_STD_MODEL_INFO
    </sql>

    <select id="selectWbOlpStdModInfoList" parameterType="WbOlpStdModInfo" resultMap="WbOlpStdModInfoResult">
        <include refid="selectWbOlpStdModInfoVo"/>
        <where>
            <if test="mcId != null  and mcId != ''"> and mc_id like '%' || #{mcId} || '%'</if>  <!--MyBatis会默认把传入的false/0及空字符串转为false-->
            <if test="status != null "> and status = #{status}</if>
        </where>
        order by sid asc
    </select>

    <select id="selectWbOlpStdModInfoBySid" parameterType="Long" resultMap="WbOlpStdModInfoResult">
        <include refid="selectWbOlpStdModInfoVo"/>
        where sid = #{sid}
    </select>
    <select id="getModelsTtlCnt" resultType="java.lang.Integer">
        select count(1) as modelsTtlCnt from IMBIZ.WB_OLP_STD_MODEL_INFO where status = 1
    </select>
    <!--<select id="getModelsUpdatedCnt" resultType="java.lang.Integer">
        select count(1) from public.std_mod_info where status = 1 and mc_id in (select distinct mc_id from public.std_mod_info where status = 0)
    </select>-->
    <select id="getModelAvgCnt" resultType="java.lang.Integer">
         select round(avg(line_count)) from IMBIZ.WB_OLP_STD_MODEL_INFO where status = 1
    </select>
    <!--<select id="getRecentUpdatedCnt" resultType="java.lang.Integer">
        select count(1)
        from public.std_mod_info
        where status = 1
          and update_time >= (date_trunc('day',now()) -interval '7d')
          and mc_id in (select distinct mc_id from public.std_mod_info where status = 0)
    </select>-->
    <select id="getWbOlpTrending" resultMap="WbOlpTrendingVoResult">
        select
            to_date(`dt`) 'dt',
            code,
            count(1) cnt
        from qtech_eq_dwd.im_wb_olp_chk_result_detail
        where `dt` >= days_sub(to_date(now()), 15)
        group by to_date(`dt`), code
        order by 1 asc, 2 asc
    </select>

    <insert id="insertWbOlpStdModInfo" parameterType="WbOlpStdModInfo" useGeneratedKeys="true" keyProperty="sid">
        insert into IMBIZ.WB_OLP_STD_MODEL_INFO
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="mcId != null">mc_id,</if>
            <if test="lineCount != null">line_count,</if>
            <if test="status != null">status,</if>
            <if test="provider != null">provider,</if>
            <if test="factory != null">factory,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="mcId != null">#{mcId},</if>
            <if test="lineCount != null">#{lineCount},</if>
            <if test="status != null">#{status},</if>
            <if test="provider != null">#{provider},</if>
            <if test="factory != null">#{factory},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
        <selectKey keyProperty="sid" resultType="java.lang.Long" order="AFTER">
            SELECT IMBIZ.WB_OLP_STD_MODEL_DETAIL_SQ.NEXTVAL AS sid
            FROM DUAL
        </selectKey>
    </insert>

    <update id="updateWbOlpStdModInfo" parameterType="WbOlpStdModInfo">
        update IMBIZ.WB_OLP_STD_MODEL_INFO
        <trim prefix="SET" suffixOverrides=",">
            <if test="mcId != null">mc_id = #{mcId},</if>
            <if test="lineCount != null">line_count = #{lineCount},</if>
            <if test="status != null">status = #{status},</if>
            <if test="provider != null">provider = #{provider},</if>
            <if test="factory != null">factory = #{factory},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where sid = #{sid}
    </update>

    <delete id="deleteWbOlpStdModInfoBySid" parameterType="Long">
        delete from IMBIZ.WB_OLP_STD_MODEL_INFO where sid = #{sid}
    </delete>

    <delete id="deleteWbOlpStdModInfoBySids" parameterType="String">
        delete from IMBIZ.WB_OLP_STD_MODEL_INFO where sid in
        <foreach item="sid" collection="array" open="(" separator="," close=")">
            #{sid}
        </foreach>
    </delete>
</mapper>
